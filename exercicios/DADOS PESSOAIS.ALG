Algoritmo "dados pessoais"
// 7 - ler o nome de uma pessoa, a sua idade e o seu salário
// e mostrar as informações.
Var
nome: caracter
idade: inteiro
salario: real

Inicio
escreva("Nome: ")
leia(nome)

escreva("Idade: ")
leia(idade)

escreva("Salário: ")
leia(salario)

escreval("Nome:", nome)
escreval("Idade:", idade)
escreval("Salário:", salario)

Fimalgoritmo